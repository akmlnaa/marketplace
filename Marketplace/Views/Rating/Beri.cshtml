@model Marketplace.Models.Rating
@{
    ViewData["Title"] = "Beri Rating";
    Layout = "~/Views/Shared/_LayoutPembeli.cshtml";
}

<h2>Beri Rating</h2>

<form asp-action="Beri" method="post">
    <input type="hidden" asp-for="IkanId" />

    <div class="mb-3">
        <label asp-for="Nilai" class="form-label">Nilai (1–5)</label>
        <select asp-for="Nilai" class="form-select" required>
            <option value="">-- Pilih --</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Nilai" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Komentar" class="form-label">Komentar</label>
        <textarea asp-for="Komentar" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Kirim</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
