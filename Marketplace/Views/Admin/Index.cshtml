@{
    ViewData["Title"] = "Dashboard Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; // Atau buat _LayoutAdmin.cshtml jika ingin layout khusus admin
}

<h2 class="mb-4">Dashboard Admin</h2>

<div class="row text-center">
    <div class="col-md-3 mb-4">
        <div class="card bg-primary text-white shadow">
            <div class="card-body">
                <h4 class="mb-2">Pengguna</h4>
                <h3>@ViewBag.TotalUsers</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card bg-success text-white shadow">
            <div class="card-body">
                <h4 class="mb-2">Ikan</h4>
                <h3>@ViewBag.TotalIkans</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card bg-info text-white shadow">
            <div class="card-body">
                <h4 class="mb-2">Toko</h4>
                <h3>@ViewBag.TotalTokos</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card bg-warning text-white shadow">
            <div class="card-body">
                <h4 class="mb-2">Transaksi</h4>
                <h3>@ViewBag.TotalTransakses</h3>
            </div>
        </div>
    </div>
</div>
