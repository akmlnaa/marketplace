@model IEnumerable<Marketplace.Models.Toko>

@{
    ViewData["Title"] = "Daftar Toko";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; 
}

<h2 class="mt-3">Daftar Toko</h2>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">Belum ada toko yang terdaftar.</div>
}
else
{
    <table class="table table-striped table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nama Toko</th>
                <th>Penjual</th>
                <th>Alamat</th>
                <th>Deskripsi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var toko in Model)
            {
                <tr>
                    <td>@toko.Id</td>
                    <td>@toko.NamaToko</td>
                    <td>@toko.Penjual?.NamaLengkap (@toko.Penjual?.Username)</td>
                    <td>@toko.Alamat</td>
                    <td>@toko.Deskripsi</td>
                </tr>
            }
        </tbody>
    </table>
}
