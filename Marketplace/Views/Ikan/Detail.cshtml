@model Marketplace.Models.Ikan

@{
    ViewData["Title"] = "Detail Ikan";
    Layout = "~/Views/Shared/_LayoutPembeli.cshtml";
}

<div class="container-lg mt-5">
    <div class="row g-5 align-items-center shadow p-5 bg-white rounded-4">
        <div class="col-md-6">
            <img src="@Model.Gambar" alt="@Model.NamaIkan" class="img-fluid rounded-3 shadow" style="max-height: 500px; width: 100%; object-fit: cover;" />
        </div>

        <div class="col-md-6">
            <h2 class="text-primary fw-bold mb-3">@Model.NamaIkan</h2>
            <p class="fs-5"><strong>Harga:</strong> Rp @Model.Harga.ToString("N0")</p>
            <p class="fs-5"><strong>Stok:</strong> @Model.Stok</p>
            <p class="fs-5"><strong>Deskripsi:</strong> @Model.Deskripsi</p>
            <p class="fs-5"><strong>Dipublish:</strong> @Model.TanggalPublish?.ToString("dd MMMM yyyy")</p>

            @if (Model.Toko != null)
            {
                <p class="fs-5"><strong>Penjual:</strong> @Model.Toko?.NamaToko</p>
            }

            <div class="mt-4 d-flex flex-wrap gap-3">
                <a href="@Url.Action("AddToCart", "Transaksi", new { ikanId = Model.Id })" class="btn btn-lg btn-success px-4">
                    <i class="fas fa-cart-plus me-2"></i> Beli Sekarang
                </a>
                <a href="@Url.Action("Index", "Pembeli")" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="fas fa-arrow-left me-2"></i> Kembali
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    @@media (max-width: 768px) {
        .container-lg

    {
        padding: 1rem;
    }

    .row.g-5 {
        flex-direction: column;
    }

    }

    body {
        background-color: #f8f9fa;
    }
</style>
